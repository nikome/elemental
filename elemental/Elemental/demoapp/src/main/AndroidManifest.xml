<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidplot.demos">

    <!-- Used by Crittercism to report crashes -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".DemoApplication"
        android:icon="@drawable/ic_launcher"
        android:label="Androidplot API DemoApp"
        android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FXPlotExampleActivity" />

        <!-- receiver for demo app widget -->
        <receiver
            android:name=".widget.DemoAppWidgetProvider"
            android:icon="@drawable/ic_launcher"
            android:label="Example Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/demo_app_widget_provider_info" />
        </receiver>

        <activity android:name=".metodobiseccionActivity" />
        <activity
            android:name=".ecuacionesunavariableActivity"
            android:label="@string/title_activity_ecuacionesunavariable" />
        <activity
            android:name=".TablaBiseccionActivity"
            android:label="@string/title_activity_tabla_biseccion" />
        <activity
            android:name=".ReglaFalsaActivity"
            android:label="@string/title_activity_regla_falsa" />
        <activity
            android:name=".PuntofijoActivity"
            android:label="@string/title_activity_puntofijo" />
        <activity
            android:name=".BusquedasIncrementalesActivity"
            android:label="@string/title_activity_busquedas_incrementales" />
        <activity
            android:name=".MetodoIncrementalTablaActivity"
            android:label="@string/title_activity_metodo_incremental_tabla" />
        <activity
            android:name=".PuntoFijoTableActivity"
            android:label="@string/title_activity_punto_fijo_table" />
        <activity
            android:name=".NewtonActivity"
            android:label="@string/title_activity_newton" />
        <activity
            android:name=".NewtonTableActivity"
            android:label="@string/title_activity_newton_table" />
        <activity
            android:name=".SecantMethodActivity"
            android:label="@string/title_activity_secant_method" />
        <activity
            android:name=".SecantTableActivity"
            android:label="@string/title_activity_secant_table" />
        <activity
            android:name=".MultipleRootActivity"
            android:label="@string/title_activity_multiple_root" />
        <activity
            android:name=".MultipleRootTable2Activity"
            android:label="@string/title_activity_multiple_root_table2" />
        <activity
            android:name=".GraphActivity"
            android:label="@string/title_activity_graph" />
        <activity
            android:name=".MetodosInterpolacionActivity"
            android:label="@string/title_activity_metodos_interpolacion"></activity>
    </application>

</manifest>